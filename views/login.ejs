    <title>SB Admin 2 - Login</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-dark">
    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
        home  
        <div class="topbar-divider d-none d-sm-block"></div>
        Login
        <div class="topbar-divider d-none d-sm-block"></div>
        dashboard
        </ul>
    </nav>
    <div class="container">

       
        <!-- Outer Row -->
        <div class="row justify-content-center ">
            <h1 style="color:white;margin-top:60px">LMS FINAL PROJECT - SIMPLYLEARN</h1>
            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-4">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="p-1">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">New To EGyan ? Sign Up For Free !</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group row">
                                            <div class="col-sm-8">
                                                <input type="txtFullName" class="form-control "
                                                id="txtFullName" 
                                                placeholder="FullName">
                                            </div>
                                            <div class="col-sm-4">
                                                <select id="ddlType" class="form-control" placeholder="Type">
                                                    <option value="1">Instructor</option>
                                                    <option value="2">Student</option>
                                                </select>
                                            </div>
                                            
                                            
                                        </div>
                                        <div class="form-group">
                                            <input type="email" class="form-control "
                                                id="txtEmailID" placeholder="Email ID">
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6">
                                                <input type="txtType" class="form-control "
                                                id="txtPassword" placeholder="Password">
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="txtType" class="form-control "
                                                id="txtConfirmPassword" placeholder="Confirm Password">
                                            </div>
                                        </div>
                                       
                                        
                                        <a href="#" class="btn btn-primary btn-block">
                                            Register Now
                                        </a>
                                     
                                    </form>
                                   
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="p-1">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Have And Account ? Login Now!</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="email" class="form-control "
                                                id="txtLoginEmailID" 
                                                placeholder="Email ID">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control "
                                                id="txtLoginPassword" placeholder="Password">
                                        </div>
                                       
                                        <a href="#" class="btn btn-primary btn-block">
                                            Login
                                        </a>
                                     
                                    </form>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

