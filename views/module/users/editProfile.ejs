<%- include('../../partials/header'); %>

 
<div class="container-fluid">

  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Edit Profile</h1>
  </div>
  <div class="row">

    <div class="col-lg-12">

       

        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                      <div class="p-1">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Change Profile</h1>
                        </div>
                        <form from class="user">
                            
                            <div class="form-group">
                                <input type="text" class="form-control" id="txtName" placeholder="Name">
                            </div>
                            <div class="form-group ">
                                
                                    <input type="email" class="form-control" id="txtEmailID" placeholder="Email ID">
                               
                               
                            </div>
                            <a href="#" class="btn btn-primary btn-block">
                                Update Profile
                            </a>
                            <hr>
                           
                        </form>
                       
                    </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="p-1">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Change Password</h1>
                            </div>
                            <form class="user">
                                
                                <div class="form-group">
                                    <input type="password" class="form-control" id="exampleInputEmail" placeholder="Old Password">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control" id="exampleInputPassword" placeholder="New Password">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control" id="exampleRepeatPassword" placeholder="Repeat New Password">
                                    </div>
                                </div>
                                <a href="login.html" class="btn btn-primary  btn-block">
                                    Update Password
                                </a>
                                <hr>
                               
                            </form>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

   

</div>
</div>

<%- include('../../partials/footer'); %>
